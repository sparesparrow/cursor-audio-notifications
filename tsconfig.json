{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "outDir": "./out",
        "lib": ["ES2020"],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": ["node_modules", ".vscode-test"]
} 